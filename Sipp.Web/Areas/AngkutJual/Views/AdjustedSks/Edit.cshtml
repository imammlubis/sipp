@model EduSpot.Entity.Tables.AngkutJual.AdjustedSk

@{
    ViewBag.Title = "Edit Data SK Penyesuaian";
    Layout = "~/Areas/AngkutJual/Views/Shared/_LayoutAngkutJual.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-form box-shadow">
            <div class="portlet-title">
                <ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="#">Home</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="#">Master</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="#">Angkut Jual</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <span>SK Penyesuaian</span>
                    </li>
                </ul>
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="title">
                            <i class="fa fa-pencil-square-o font-red"></i>
                            <span class="font-red sbold">
                                Edit Data SK Penyesuaian
                            </span>
                        </h4>
                    </div>
                </div>
            </div>
            <div class="portlet-body" style="overflow:hidden;">

                @using (Html.BeginForm("Edit", "AdjustedSks", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model=>model.ID)
                                 @*@Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })*@
                                 @*@Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })*@

                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "" })*@
                                    <label>Nama Perusahaan</label>
                                    @Html.DropDownList("CompanyID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CompanyID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.AdditionalInfo, htmlAttributes: new { @class = "" })*@
                                    <label>Keterangan</label>
                                    @Html.EditorFor(model => model.AdditionalInfo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.AdditionalInfo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.LetterNumber, htmlAttributes: new { @class = "" })*@
                                    <label>No. Surat</label>
                                    @Html.EditorFor(model => model.LetterNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LetterNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.LetterDate, htmlAttributes: new { @class = "" })*@
                                    <label>Tanggal Surat</label>
                                    @Html.EditorFor(model => model.LetterDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LetterDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.RpiitNumber, htmlAttributes: new { @class = "" })*@
                                    <label>No. RPIIT</label>
                                    @Html.EditorFor(model => model.RpiitNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.RpiitNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.RpiitDate, htmlAttributes: new { @class = "" })*@
                                    <label>Tanggal RPIIT</label>
                                    @Html.EditorFor(model => model.RpiitDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.RpiitDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.SkNumber, htmlAttributes: new { @class = "" })*@
                                    <label>No. SK</label>
                                    @Html.EditorFor(model => model.SkNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SkNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group has-success">
                                    @*@Html.LabelFor(model => model.SkDate, htmlAttributes: new { @class = "" })*@
                                    <label>Tanggal SK</label>
                                    @Html.EditorFor(model => model.SkDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SkDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group has-success">
                                    <label>File Sk yang Tersedia</label>                                    
                                    <a style="text-decoration:none;" href="@Url.Content("~/Documents/SkPenyesuaian/"+Model.SkFile)" target="_blank">
                                       <h2 style="border:1px solid #27a4b0;margin-top:0px;">Klik untuk melihat</h2>
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group has-success">
                                    <label>File SK </label>
                                    <input type="file" id="file" name="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-sm-4 col-xs-5 col-sm-offset-2">
                                <div class="form-group has-success">
                                    @*<input type="submit" value="Simpan" class="btn-save btn green-sharp red-stripe btn-block" />*@
                                    <button type="submit" class="btn green-sharp red-stripe">
                                        <i class="fa fa-save"></i> Simpan
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <a href="@Url.Action("Index")" class="btn green-sharp red-stripe box-shadow">
            <i class="fa fa-list-alt"></i> Lihat Daftar
        </a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
