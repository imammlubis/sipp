<div id="static4" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="dataCadanganBatubaraForm" data-toggle="validator" role="form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title bold">Form Cadangan Batubara</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="terkira">Stripping Ratio (SR)</label>
                                <input type="text" 
                                       ng-model="cadanganBatubaraModel.sr"
                                       class="form-control"
                                       id="sr" 
                                       required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="blok">Blok/Area (HA)</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="cadanganBatubaraModel.blok"
                                       id="blok"
                                       required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="terkira">Terkira</label>
                                <input type="number"
                                       class="form-control"
                                       ng-model="cadanganBatubaraModel.terkira"
                                       id="terkira"
                                       required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="terbukti">Terbukti</label>
                                <input type="number" 
                                       class="form-control" 
                                       ng-model="cadanganBatubaraModel.terbukti" 
                                       id="terbukti"
                                       required />
                            </div>
                        </div>
                        @*<div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="total">Total (Ton)</label>
                                <input type="text" 
                                       class="form-control" 
                                       ng-model="cadanganBatubaraModel.total" 
                                       id="total"
                                       required />
                            </div>
                        </div>*@
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" ng-show="!isEditCadanganBatubara" ng-click="CreateCadanganBatubara()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="submit" ng-show="isEditCadanganBatubara" ng-click="SaveChangesCadanganBatubara()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="reset" data-dismiss="modal" class="btn red"><i class="fa fa-close"></i> Batal</button>
                </div>
            </form>
        </div>
    </div>
</div>
