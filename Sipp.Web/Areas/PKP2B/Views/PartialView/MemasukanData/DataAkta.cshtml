<style>
    #judulAkta {
        text-transform: uppercase;
    }
</style>
<div id="static" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">            
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title bold">Form Data Akta</h4>
                </div>
            <form name="dataAktaForm" data-toggle="validator" role="form">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <fieldset style="padding:5px;border:1px solid #27a4b0;">
                                <legend class="font-sm bold" style="padding-left:5px;">Akta Pendirian dan Perubahan</legend>
                                <div class="form-group has-success">
                                    <label for="judulAkta">Judul Akta</label>
                                    <input type="text" ng-model="aktaModel.judulAkta" id="judulAkta" class="form-control" required>
                                </div>
                                <div class="form-group has-success">
                                    <label for="noAkta">No Akta</label>
                                    <input type="text" ng-model="aktaModel.noAkta" class="form-control" required>
                                </div>
                                <div class="form-group has-success">
                                    <label for="tanggalAkta">Tanggal Akta</label>
                                    @*<input class="form-control form-control-inline date-picker" size="16" type="text" value="" required />*@
                                    <div class="input-group input-append date" id="tanggalAkta">
                                        <input type="text" class="form-control" data-date-format="dd/mm/yyyy"
                                               name="tanggalAkta" ng-model="aktaModel.tanggalAkta" required />
                                        <span class="input-group-addon add-on">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset style="padding:5px;border:1px solid #27a4b0;">
                                <legend class="font-sm bold" style="padding-left:5px;">Pengesahan Kemenkumham</legend>
                                <div class="form-group has-success">
                                    <label for="noPk">No</label>
                                    <input type="text" ng-model="aktaModel.noPk" id="noPk" class="form-control" required>
                                </div>
                                <div class="form-group has-success">
                                    <label for="tanggalPk">Tanggal</label>
                                    <div class="input-group input-append date" id="tanggalKemenkumham">
                                        <input type="text" class="form-control" data-date-format="dd/mm/yyyy"
                                               name="tanggalPk" id="tanggalPk" ng-model="aktaModel.tanggalPk" required />
                                        <span class="input-group-addon add-on">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                                @*<div class="form-group has-success">
                                    <label for="file">file</label>
                                    <input type="file" ng-model="aktaModel.filePk" id="file" class="form-control">
                                </div>*@
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" ng-show="!isEditDataAkta" ng-click="CreateDataAkta()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="submit" ng-show="isEditDataAkta" ng-click="SaveChangesDataAkta()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="reset" data-dismiss="modal" class="btn red"><i class="fa fa-close"></i> Batal</button>
                </div>
            </form>
        </div>
    </div>
</div>
