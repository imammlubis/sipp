        var self = this;
        return {
            edit: function (e) {
                var selectedRow = returnSelectedRow(e);
                var url = "@Url.Action("edit", "memasukandata", new { area = "pkp2b" })" + "/" + selectedRow.ID.toString();
                window.location.replace(url);
            },
            edit3: function (e) {
                var selectedRow = returnSelectedRow3(e);
