            },

            delete3: function (e) {
                var selectedRow = returnSelectedRow3(e);
                var konf = confirm("Are You Sure to delete " + selectedRow.Name + "'s Evaluation ?");
                if (konf == true) {
                    $.ajax({
                        type: "POST",
