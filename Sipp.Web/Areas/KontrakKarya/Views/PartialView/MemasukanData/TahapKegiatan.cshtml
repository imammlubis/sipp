<div id="static6" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="dataTahapKegiatanForm" data-toggle="validator" role="form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title bold">Form Tahap Kegiatan</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="tahapKegiatan">Tahap Kegiatan</label>
                                <select class="form-control"
                                        id="tahapKegiatan"
                                        ng-model="tahapKegiatanModel.tahapKegiatan" 
                                        name="tahapKegiatan"
                                        required >
                                    <option></option>
                                    <option value="Studi kelayakan">Studi kelayakan</option>
                                    <option value="Operasi Produksi">Operasi Produksi</option>
                                    <option value="Konstruksi">Konstruksi</option>
                                    <option value="Eksplorasi">Eksplorasi</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group has-success">
                                <label for="luasDipertahankan">Luas Dipertahankan (Ha)</label>
                                <input type="text"class="form-control"
                                        id="luasDipertahankan"
                                        ng-model="tahapKegiatanModel.luasDipertahankan" 
                                        name="luasDipertahankan"
                                        required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" ng-show="!isEditTahapKegiatan" ng-click="CreateTahapKegiatan()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="submit" ng-show="isEditTahapKegiatan" ng-click="SaveChangesTahapKegiatan()" class="btn green red-stripe"><i class="fa fa-save"></i> Simpan</button>
                    <button type="reset" data-dismiss="modal" class="btn red"><i class="fa fa-close"></i> Batal</button>
                </div>
            </form>
        </div>
    </div>
</div>
