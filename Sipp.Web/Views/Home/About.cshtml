@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<div ng-app="testing" ng-controller="testing-controller">

    <span>{{companyModel.name}} <input type="text" ng-model="companyModel.name" /><input type="text" ng-model="companyModel.name" /></span>
    <div class="row" ng-show="isAddCompany">
        <div class="col-md-12">

            <div class="form-body">

                <div class="form-group">
                    <label>Name : {{companyModel.name}}</label>
                    <div class="input-group">
                        <input type="text" ng-model="companyModel.name"/>
                    </div>
                </div>

                <div class="form-group">
                    <label>NPWP</label>
                    <div class="input-group">
                        <input type="text" ng-model="companyModel.npwp" />
                    </div>
                </div>


                <div class="form-actions">
                    <input type="button" class="btn " value="Simpan" ng-click="saveCompany()" />
                </div>


            </div>

        </div>
    </div>

    <p>
        <input type="button" value="Tambah Data" ng-click="addCompany()"/>
    </p>

    <table>
        <thead>
            <tr>
                <td>
                    Nama
                </td>
                <td>
                    NPWP
                </td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in listCompany">
                <td>{{item.Name}}</td>
                <td>{{item.NPWP}}</td>
            </tr>
        </tbody>
    </table>
    


</div>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="~/Scripts/testingNgApp.js"></script>