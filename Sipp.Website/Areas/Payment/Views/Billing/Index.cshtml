
@{
    ViewBag.Title = "Input Tagihan Awal";
    Layout = "~/Areas/Payment/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>
                Input Tagihan Awal
            </h1>
        </div>
        <!-- END PAGE TITLE -->
        <!-- BEGIN PAGE TOOLBAR -->
        <!-- END PAGE TOOLBAR -->
    </div>
</div>

<div class="page-content">
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet box blue-chambray">
                    <div class="portlet-title">
                        <div class="caption">
                            Masukan nama perusahaan dan tagihan
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form class="form-horizontal" role="form">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Nama Perusahaan</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" placeholder="Nama Perusahaan" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Tagihan Awal</label>
                                    <div class="col-md-9">
                                        <input type="number" class="form-control" placeholder="Tagihan Awal" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <button type="reset" class="btn red-mint red-stripe">
                                    <i class="fa fa-close"></i> Cancel
                                </button>
                                <a class="btn green green-turquoise-stripe" data-toggle="modal" href="#responsive">
                                    <i class="fa fa-send"></i> Submit
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- END SAMPLE FORM PORTLET-->

                <!--modal-->
                <div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">Konfirmasi</h4>
                            </div>
                            <div class="modal-body">
                                <div class="scroller" style="height:100px" data-always-visible="1" data-rail-visible1="1">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4>Anda yakin tagihan awal PT x sebesar Rp 80.000.000</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn red-mint red-stripe">
                                    <i class="fa fa-close"></i> Tidak
                                </button>
                                <button type="button" data-dismiss="modal" class="btn green green-turquoise-stripe">
                                    <i class="fa fa-check"></i> Ya
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

